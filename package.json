{
  "name": "ui",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "buildy",
    "url": "https://buildy.tw"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@ui8kit/*",
    "packages/@buildy-ui/*"
  ],
  "scripts": {
    "dev": "bunx turbo run dev",
    "build": "bunx turbo run build",
    "test": "bunx turbo run test",
    "lint": "bunx turbo run lint",
    "dev:dash": "bunx turbo run dev --filter=./apps/dash",
    "build:dash": "bunx turbo run build --filter=./apps/dash",
    "changeset": "bunx changeset",
    "version:packages": "bunx changeset version",
    "release": "bun run version:packages && bun run build && bunx changeset publish"
  },
  "packageManager": "bun@1.1.30",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "turbo": "^2.5.6"
  }
}
