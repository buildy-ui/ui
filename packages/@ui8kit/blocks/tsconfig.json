{
  "include": ["./src", "../core/src", "../hooks/src"],
  "exclude": ["./lib", "./dist"],
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/blocks": ["./src/index"],
      "@/blocks/*": ["./src/*"],
      "@ui8kit/core": ["../core/src"],
      "@ui8kit/hooks": ["../hooks/src"],
      "@ui8kit/theme": ["../theme/src"]
    }
  }
} 